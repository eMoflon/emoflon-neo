// BoardPattern.gt

pattern sokobanOnFieldOfBoard {
	
	b:SokobanLanguage.Board {
		-selectedFigure->sokoban
		-fields->f1 {
			.col: 0
			.row: 0
		}
		-fields->f2 {
			.col: 1
			.row: 0
		}
	}
	f1:Field {
		-right->f2
		.endPos: false
	}
	f2:Field {
		.endPos: false
	}
	sokoban:Sokoban {
		-field->f1
	}
	
}

pattern blockOnEndField {
    b:Block {
        -field->f
    }
    f:Field {
        .endPos:true
    }
}
pattern blockOnEndFieldWithRight {
    b:Block {
        -field->f
    }
    f:Field {
        -right->fR
    }
    fR: Field {
    	.endPos: true
    }
}
pattern blockOnNoEndField {
    b:Block {
        -field->f
    }
    f:Field {
        .endPos:false
    }
}

