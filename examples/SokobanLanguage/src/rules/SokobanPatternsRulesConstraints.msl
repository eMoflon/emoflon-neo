rule testAttributeAssignmentsInRule {
	f:Field {
		.endPos != false
		.endPos := false
	}
}

rule testAttributeAssignmentsWithElementsValueAssign {
	b:SokobanLanguage.Board {
		-fields->f {
			.row > 1
			.col != 1
		}
		-fields->fEnd {
			.row := b::-fields->f::row + 42
			.col := b::-fields->f::col + 42
		}
	}
	f:Field {
		.endPos : true
		-right->fEnd
	}
	fEnd:Field {
		.endPos : false
		.endPos := f::endPos
	}
}

